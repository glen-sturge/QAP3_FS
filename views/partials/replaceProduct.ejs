<div class="product-form-wrapper">
  <form
    action="/products/<%= product.product_id %>?_method=PUT"
    method="POST"
    class="product-form"
  >
    <div class="product-form-top">
      <label>product_name:</label>
      <input
        type="text"
        class="product-name"
        name="product_name"
        value="<%=product.product_name%>"
        required
      />

      <label>product_price:</label>
      <input
        type="number"
        step="0.01"
        id="product_price"
        name="product_price"
        value="<%=product.product_price%>"
        required
      />
    </div>
    <div class="product-form-top">
      <label>product_image:</label>
      <input
        type="text"
        class="product-image"
        name="product_image"
        value="<%= product.product_image %>"
      />

      <label>category_id:</label>
      <input
        type="number"
        id="category-id"
        name="category_id"
        value="<%=product.category_id%>"
        required
      />
    </div>
    <div class="product-form-bottom">
      <label for="product-description">product_description:</label><br />
      <textarea
        type="text"
        class="product_description"
        name="product_description"
        required
      >
<%= product.product_description %></textarea
      >
    </div>
    <div class="product-form-control">
      <button type="submit" class="add-product">Replace</button>
    </div>
  </form>
</div>

<div class="product-form-wrapper">
  <form action="/products" method="POST" class="product-form">
    <div class="product-form-top">
      <label>product_name:</label>
      <input type="text" class="product-name" name="product_name" required />

      <label>product_price:</label>
      <input
        type="number"
        step="0.01"
        id="product_price"
        name="product_price"
        required
      />
    </div>
    <div class="product-form-top">
      <label>product_image:</label>
      <input type="text" class="product-image" name="product_image" />

      <label>category_id:</label>
      <input type="number" id="category-id" name="category_id" required />
    </div>
    <div class="product-form-bottom">
      <label for="product-description">product_description:</label><br />
      <textarea
        type="text"
        class="product_description"
        name="product_description"
        required
      ></textarea>
    </div>
    <div class="product-form-control">
      <button type="submit" class="add-product">Add Product</button>
    </div>
  </form>
</div>
